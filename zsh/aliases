if [ "$(uname)" = "Darwin" ]; then
  OS='mac'
elif [ "$(expr substr $(uname -s) 1 5)" = "Linux" ]; then
  OS='linux'
fi

if [ "$OS" = "linux" ]; then
  alias clonar_debian='gbp clone --verbose --all --pristine-tar'
  alias pc='lintian --color auto -i  --pedantic -I *.changes'
fi

# Very useful aliases
alias cps='ps aux | head -n1; ps aux | grep -i'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    eval "`dircolors -b`"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Akamai 
alias curl_ak='curl -H "Pragma: akamai-x-cache-on, akamai-x-cache-remote-on, akamai-x-check-cacheable, akamai-x-get-cache-key, akamai-x-get-extracted-values, akamai-x-get-nonces, akamai-x-get-ssl-client-session-id, akamai-x-get-true-cache-key, akamai-x-serial-no" -IXGET'

# prebuild script
alias prebuild="SECRETS_FILE=/Users/aga35/secret.tfvars ~/workspace/cd-devops-tools/prebuild.sh"

# What are my custom functions?
alias ls-my-funcions="cat ~/dotfiles/zsh/functions/* | grep function | cut -d' ' -f 2"

# Alias to go to the workspace folder
alias ws="cd ~/workspace"

#######
# k8s #
#######

alias kc='kubectl'
alias kclf='kubectl logs --tail=200  -f'

# Dashboard
alias k8s_pf_dashboard='kubectl port-forward  $(kubectl get pods -l "app=kubernetes-dashboard" -o jsonpath="{.items[0].metadata.name}") 8080:9090'
alias k8s_externalIPs="kubectl get nodes -o template --template='{{range.items}}{{range.status.addresses}}{{if eq .type \"ExternalIP\"}}{{.address}}{{end}}{{end}} {{end}}'"

# UME
alias ume-eyaml="docker run -v ~/workspace/kevin-puppet/keys:/keys/ -it --rm --name eyaml halberom/hiera-eyaml "
alias keys="cd /Users/mogaal/workspace/keys"
alias kevin-puppet="cd /Users/mogaal/workspace/kevin-puppet"
