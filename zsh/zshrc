# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Load my aliases
if [[ -e "$HOME/.aliases" ]]; then
    source "$HOME/.aliases";
fi

# Load my functions
if [ -e "$HOME/.zsh/functions" ]; then
  for function in $HOME/.zsh/functions/*; do
    source $function
  done
fi

